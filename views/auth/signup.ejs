<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>
  
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(errorMessage) { %>
            <div class="error-message"><%= errorMessage %></div>
            <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-check">
                <label for="name">Name</label>
                <input type="name" name="name" value="<%= oldInput.name %>"/>
            </div>
            <div class="form-check">
                <label for="email">E-mail</label>
                <input type="email" name="email" value="<%= oldInput.email %>"/>
            </div>
            <div class="form-check"> 
                <label for="password">Password</label>
                <input type="password" name="password" value="<%= oldInput.password %>"/>
            </div>
            <div class="form-check">
                <label for="password">Confirm Password</label>
                <input type="password" name="confirmPassword" value="<%= oldInput.confirmPassword %>"/>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn">Signup</button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>
